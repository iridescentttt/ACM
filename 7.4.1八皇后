#include <iostream>
using namespace std;
int nums=0;
int vis[3][15];//就是这个数组声明!!!!
void dfs(int k)
{
	if(k==8){nums++;return;}
	int i,j;
	for(i=0;i<8;i++)
	{
		if(!vis[0][i]&&!vis[1][i+k]&&!vis[2][i-k+7])
		{
			vis[0][i]=vis[1][i+k]=vis[2][i-k+7]=1;
			dfs(k+1);
			vis[0][i]=vis[1][i+k]=vis[2][i-k+7]=0;
		}
	}

}
int main(int argc, char const *argv[])
{
	int i,j;
	dfs(0);
	cout<<nums;
	return 0;
}
